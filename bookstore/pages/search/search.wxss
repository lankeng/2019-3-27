/*搜索图书*/

#view_search {
  display: flex;
  width: 100%;
  border-bottom: 1rpx solid #eee;
}

/*输入框*/

#view_input {
  width: 80%;
  display: inline-block;
}

/*搜索按钮*/

#view_btn {
  width: 20%;
  display: inline-block;
}

/*搜索框  */

#search_goods {
  /* border: 1rpx solid #090;  */
  border-radius: 35rpx;
  background-color: #f0f0f0;
  height: 80rpx;
  line-height: 80rpx;
  width: 93%;
  margin: 25rpx 20rpx;
  text-align: center;
}

/*搜索按钮*/

#btn_search {
  background-color: #f0f0f0;
  height: 70rpx;
  line-height: 70rpx;
  width: 90%;
  margin: 30rpx 0rpx;
  text-align: center;
  font-size: 33rpx;
}

.container-search {
  width: 100%;
}

.search-con {
  width: 200rpx;
  text-align: center;
  float: left;
  margin-left: 114rpx;
  margin-top: 40rpx;
  padding-bottom: 20rpx;
}

.search-img {
  width: 200rpx;
  height: 210rpx;
  margin: auto;
}

.img-self {
  width: 200rpx;
  height: 210rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.container {
  display: block !important;
}

.search-title {
  font-size: 32rpx;
  color: #666;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  border: 1px solid #cacaca;
}

.nosearch-img {
  width: 40%;
  height: 400rpx;
}
.nosearch{
  width: 100%;
  text-align: center;
  margin-top: 210rpx;
}

.nosearch-text{
  font-size: 30rpx;
  color: #999999;
  text-align: center
}
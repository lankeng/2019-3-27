/* pages/shoppingCart.wxss */
page{
  height: 100%;
}

#cart-container{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color:#F0EFF4;
}

image{
  width: 408rpx;
  height: 306rpx;
}

#cart-empty{
  padding-top:35%;
}

text{
  color: #666;
  font-size: 30rpx
}

#go-shopping{
  border:1rpx solid #E03F36;
  border-radius:20rpx;
  height: 70rpx;
  line-height: 70rpx;
  width: 200rpx;
  margin: 25rpx auto;
  text-align: center;
  color: #E03F36;
}

/* pages/cart/cart.wxss */
.cartMain{
 margin-bottom: 120rpx;
}
.cart-image{
  width: 180rpx;
  height: 200rpx;
  float: left;
  padding: 15rpx 10rpx;
}
.cart-box{
  width: 100%;
  height: 235rpx;
  background: white;
  /* margin-top: 15rpx; */
  border-bottom: 1px solid #ccc;
  /* padding-left: 60rpx; */
}
.cart-boxtwo{
  display: flex;
  flex-direction:column;
  
}
.left_imgae{
  float: left;
}
.left_box{
  float: left;
  margin-top: 20rpx;
  line-height: 60rpx
}
.cart-title{
  margin-top: 30rpx;
  font-family: "微软雅黑";
  font-size: 30rpx;
}
.cart-price{
  display: flex;
  color: red;
  font-size: 30rpx
}
.left{
  float: left;
}
.right image{
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin-right: 30rpx;
  margin-top: 30rpx;
}
.input{
  display: block;
  width: 65rpx;
  height: 65rpx;
  line-height: 65rpx;
  text-align: center;
  /* border: 1px solid red; */
  float: left;
}
.cart-add{
  border-left: none;
  background: #FBFBFB;
}
.cart-reduce{
  border-right: none;
  background: #FBFBFB;
}
.cart-text{
  width: 90rpx;
  background: #F4F4F4;
  font-size: 30rpx;
}
.cart-bottom{
  position: fixed;
  width: 100%;
  height: 87rpx;
  bottom:0;
  background: white;
  border-top: 1px solid #F4F4F4; 
}
.yuan{
  display: block;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 1px solid red;
}
.icon{
  float: left;
  margin: 85rpx 20rpx;
}
.SpCart{
  display: block;
  width: 300rpx;
  height: 300rpx;
}
.Sptext{
  font-size: 30rpx;
}
.cart-icon{
  margin:27rpx 20rpx;
  float: left;
}
.cart-sum{
  width: 200rpx;
  height: 100%;
  line-height: 87rpx;
  /* background: red; */
  float: left;
  text-align: center;
  margin-left:17px;
  margin-top:-2px;

}
.cart-pay{
  width: 180rpx;
  height: 100%;
  background: #405F80;
  float: right;
}
.cart-payall{
  width: 180rpx;
  height: 100%;
  background: rgb(47, 214, 25);
  float: right;
}
.cart_paycol{
  display: block;
  line-height: 87rpx;
  text-align: center;
  font-size: 30rpx;
  color: white;
}
.sum_color{
  color: red;
  font-size: 25rpx;
}
.sum_text{
  font-size: 30rpx;
}
.checkAll{
  line-height: 87rpx;
  font-size: 28rpx;
  float: left
}
.btna{
  display: block
}
.btn{
  display: none
}
.showaho-img{
  width: 200rpx;
  height: 200rpx;
  margin: auto;
  margin-top: 250rpx;
}
.showaho{
  width: 100%
}
.showaho-text{
  font-size: 30rpx;
  color: #666666;
  text-align: center;
  margin-top: 30rpx;
}
.showaho-let{
  width: 90%;
  margin: auto;
  margin-top: 45rpx;
  background-color: #d81e06;
  color: #ffffff;
}